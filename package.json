{
  "name": "pika-plugin-pkg-node",
  "version": "1.1.0",
  "description": "Pika plugin to package a Node.js app into an executable",
  "author": "kevinpollet <pollet.kevin@gmail.com>",
  "homepage": "https://github.com/kevinpollet/pika-plugin-pkg-node#readme",
  "bugs": "https://github.com/kevinpollet/pika-plugin-pkg-node/issues",
  "repository": "github:kevinpollet/pika-plugin-pkg-node",
  "license": "MIT",
  "keywords": [
    "pika",
    "plugin",
    "nodejs",
    "executable",
    "pkg"
  ],
  "scripts": {
    "build": "rm -rf pkg && pika-pack build",
    "format": "prettier --write '**/*.{ts,js,json,md,yml}'  '!**/pkg/**'",
    "lint": "eslint '{src,examples/hello-pika-cli/src}/**/*'",
    "release": "pika-pack publish"
  },
  "dependencies": {
    "@pika/types": "0.4.0",
    "fs-extra": "8.1.0",
    "pkg": "4.4.0"
  },
  "devDependencies": {
    "@pika/pack": "0.4.0",
    "@pika/plugin-build-node": "0.4.0",
    "@pika/plugin-ts-standard-pkg": "0.4.0",
    "@types/fs-extra": "8.0.0",
    "@types/node": "8.10.49",
    "@typescript-eslint/eslint-plugin": "1.12.0",
    "@typescript-eslint/parser": "1.12.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "6.0.0",
    "husky": "3.0.1",
    "lint-staged": "9.2.0",
    "prettier": "1.18.2",
    "typescript": "3.5.3"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg"
      ],
      [
        "@pika/plugin-build-node"
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,yml,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
